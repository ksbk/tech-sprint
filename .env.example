# ----------------------------
# TechSprint configuration
# ----------------------------

# Runtime
TECHSPRINT_WORKDIR=.techsprint
TECHSPRINT_ANCHOR=tech
TECHSPRINT_LOG_LEVEL=INFO

# News
TECHSPRINT_RSS_URL=https://rss.nytimes.com/services/xml/rss/nyt/Technology.xml
TECHSPRINT_MAX_ITEMS=5

# Script (LLM)
TECHSPRINT_MODEL=gpt-4o-mini
TECHSPRINT_TEMPERATURE=0.6
TECHSPRINT_MAX_TOKENS=800

# Audio
TECHSPRINT_VOICE=en-US-AriaNeural

# Video
# Required once VideoService is real (ffmpeg render)
TECHSPRINT_BACKGROUND_VIDEO=./assets/background.mp4
TECHSPRINT_BURN_SUBTITLES=true

# Secrets (do not commit)
TECHSPRINT_OPENAI_API_KEY=
